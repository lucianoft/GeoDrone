<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:radius="50dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:color="@color/textViewRegisterTitleColor"
                android:width="0.5dp"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <corners android:radius="50dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:color="@color/textViewRegisterTitleColor"
                android:width="1dp"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>
</selector>