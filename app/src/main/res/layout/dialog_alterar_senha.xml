<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp"
    >


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_senha_usuario_atual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_senha_usuario_atual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/lb_senha"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_senha_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_senha_usuario_atual"
            >
            <EditText android:id="@+id/input_nova_senha_usuario"
                style="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/lb_senha"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_confirmar_senha_usuario"
            android:layout_below="@+id/input_layout_senha_usuario"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/input_confirmar_senha_usuario"
                style="@style/TextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/lb_confirmar_senha"/>
        </android.support.design.widget.TextInputLayout>


</RelativeLayout>