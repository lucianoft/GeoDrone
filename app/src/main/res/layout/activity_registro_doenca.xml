<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.registrodoenca.RegistroDoencaActivity">

    <LinearLayout
        android:id="@+id/linear_layout_tipo_doenca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "@string/lb_tipo_cultivo"
            />

        <Spinner
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:id="@+id/spinner_tipo_doenca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--NEW LINE!-->
    <LinearLayout
        android:id="@+id/linear_layout_doenca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_tipo_doenca"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/lb_doenca"
            android:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteDoenca"
            android:hint="@string/lb_pesquisar"
            android:completionThreshold="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--NEW LINE!-->

    <!--  qtde -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_qtde_doenca"
        android:layout_below="@+id/linear_layout_doenca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText
            android:id="@+id/edit_text_qtde_doenca"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/lb_qtd_doencas" />
    </android.support.design.widget.TextInputLayout>


    <!--NEW LINE!-->
    <LinearLayout
        android:id="@+id/linear_layout_estagio_infestacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input_layout_qtde_doenca"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/lb_estagio_infestacao"
            android:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteEstagioInfestacao"
            android:hint="@string/lb_pesquisar"
            android:completionThreshold="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--  Observacao -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_obs_doenca"
        android:layout_below="@+id/linear_layout_estagio_infestacao"
        style="@style/TextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/edit_text_obs_doenca"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/lb_observacao" />
    </android.support.design.widget.TextInputLayout>


    <!--NEW LINE!-->
    <Button
        android:id="@+id/btn_salvar_doenca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input_layout_obs_doenca"
        android:layout_marginTop="15dp"
        style="@style/CustomStyleButton"
        android:text="@string/lb_btn_salvar_registro_doenca" />

</RelativeLayout>
