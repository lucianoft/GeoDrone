<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgCamera"
            android:contentDescription="Foto tirada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_cad_imagem_salvar"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:id="@+id/layout_cad_imagem_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_nav_view_cad_imagem">

            <LinearLayout
                android:id="@+id/linear_layout_reg_imagem_direcao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text= "@string/lb_direcao"
                    />

                <Spinner
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/spinner_direcao_reg_imagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_layout_reg_imagem_direcao">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextLabel"
                    android:hint="@string/lb_observacao"
                    android:id="@+id/edit_text_obs_reg_imagem"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_menu_send"
                android:id="@+id/float_button_salvar_imagem"
                android:tint="@android:color/white"
                app:backgroundTint="@color/colorPrimary"
                android:layout_below="@+id/linear_layout_reg_imagem_direcao"
                android:layout_alignRight="@+id/linear_layout_reg_imagem_direcao"
                app:fabSize="mini" />

        </RelativeLayout>
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_nav_view_cad_imagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:itemBackground="@color/colorPrimary"
            android:background="@color/colorPrimary"
            app:itemIconTint="@drawable/bottom_item_color"
            app:itemTextColor="@drawable/bottom_item_color"
            app:menu="@menu/menu_cadastro_imagem_bottom_navigation" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>