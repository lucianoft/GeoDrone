<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundMessage"
    android:fitsSystemWindows="true"
    tools:context=".activity.MensagemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chatRecycler"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:id="@+id/messageToSendInputLayout"
                android:background="@drawable/edittext_bg"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_margin="5dp"
                    android:id="@+id/messageToSend"
                    android:layout_width="match_parent"
                    android:layout_weight="8"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_margin="5dp"
                android:id="@+id/newChatFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_menu_send"/>
            <!--
            <ImageButton
                android:layout_margin="5dp"
                android:background="@drawable/btn_transparent_edge_green"
                android:src="@drawable/ic_menu_send"
                android:id="@+id/sendMessageButton"
                android:text="Send"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                />
                -->
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
